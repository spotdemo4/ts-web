{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": ["config:recommended", "group:allDigest"],
	"lockFileMaintenance": {
		"enabled": true,
		"automerge": true
	},
	"nix": {
		"enabled": true
	},
	"customManagers": [
		{
			"customType": "regex",
			"description": "Update Buf inputs",
			"managerFilePatterns": ["/^buf.gen.yaml$/"],
			"matchStrings": [
				".*git_repo: (?<packageName>.*\\/(?<depName>.*).git)[\\s\\S]*branch: (?<currentValue>.*)[\\s\\S]*ref: (?<currentDigest>.*)"
			],
			"depTypeTemplate": "buf",
			"datasourceTemplate": "git-refs"
		}
	],
	"packageRules": [
		{
			"matchUpdateTypes": ["minor", "patch", "pin", "digest"],
			"automerge": true
		},
		{
			"matchManagers": ["nix"],
			"enabled": false
		},
		{
			"matchManagers": ["nix"],
			"matchUpdateTypes": ["lockFileMaintenance"],
			"enabled": true
		},
		{
			"matchManagers": ["github-actions"],
			"matchPackageNames": ["*"],
			"groupName": "GitHub Actions"
		},
		{
			"matchManagers": ["custom.regex"],
			"matchDepTypes": ["buf"],
			"postUpgradeTasks": {
				"commands": ["buf generate"]
			}
		},
		{
			"matchManagers": ["npm"],
			"postUpgradeTasks": {
				"commands": ["npm install"]
			}
		}
	]
}
