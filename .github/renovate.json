{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": ["config:recommended"],
	"lockFileMaintenance": {
		"enabled": true
	},
	"git-submodules": {
		"enabled": true
	},
	"packageRules": [
		{
			"matchUpdateTypes": ["minor", "patch", "pin", "digest"],
			"automerge": true
		},
		{
			"matchManagers": ["git-submodules"],
			"postUpgradeTasks": {
				"commands": ["buf generate"]
			}
		},
		{
			"matchManagers": ["npm"],
			"postUpgradeTasks": {
				"commands": ["npm install"]
			}
		},
		{
			"matchManagers": ["npm", "git-submodules"],
			"postUpgradeTasks": {
				"commands": ["nix-update --flake --version=skip default"]
			}
		}
	]
}
